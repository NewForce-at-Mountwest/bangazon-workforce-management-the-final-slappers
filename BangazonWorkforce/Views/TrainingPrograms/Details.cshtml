@model BangazonWorkforce.Models.TrainingProgram

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TrainingProgram</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Program Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Program Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Max Attendees
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxAttendees)
        </dd>
    </dl>

    <h4>Employees Enrolled</h4>
    <hr />
    @{
        if (Model.AttendingEmployees.Count != 0)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Department
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.AttendingEmployees)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => employee.FirstName)
                                @Html.DisplayFor(modelItem => employee.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => employee.departmentOfEmployee.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5>No employees enrolled!</h5>
        }
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

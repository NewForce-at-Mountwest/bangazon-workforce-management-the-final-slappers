@model BangazonWorkforce.Models.ViewModels.EmployeeTrainingViewModel

@{
    ViewData["Title"] = "CreateEmployeeTraining";
}

<h1>Enroll in Training Program</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmployeeTraining">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>@Model.employee.FirstName @Model.employee.LastName</h4>
            

            <div class="form-group">
                <label asp-for="programs" class="control-label">Select programs to enroll this employee in. Hold CTRL to select multiple programs.</label>
                <select class="form-control"
                        multiple
                        asp-for="selectedPrograms"
                        asp-items="@Model.programs"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
